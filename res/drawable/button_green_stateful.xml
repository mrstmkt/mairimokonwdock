<?xml version="1.0" encoding="utf-8" ?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:state_pressed="false">  
    <!-- 
        <color android:color="@color/green_default" />  
 -->
 		<shape xmlns:android="http://schemas.android.com/apk/res/android"
 			android:shape="ring"
			android:innerRadius="0dip"
			android:thicknessRatio="3.2" 
 			android:useLevel="false">  
    <!-- 
		    <stroke android:width="3px" android:color="@color/green_default" />  
		    <padding android:left="2px" android:top="2px"  
		            android:right="2px" android:bottom="2px" />  
		    <corners android:radius="2px" />  
		    <solid android:color="@color/green_default"/>
 -->
		    <padding android:left="2px" android:top="2px"  
		            android:right="2px" android:bottom="2px" />  
			<gradient
			        android:startColor="@color/green_default" 
			        android:centerY="0.6" 
			        android:centerColor="@color/green_default" 
			        android:endColor="#1C1616"
			        android:angle="270" />
		    <corners android:radius="2px" />  
		    <stroke android:width="1px" android:color="#FFFFFF" />  
		</shape> 
    </item>  
    <item android:state_pressed="true">  
    <!-- 
        <color android:color="@color/green_pressed" />  
 -->
 		<shape xmlns:android="http://schemas.android.com/apk/res/android"
 			android:shape="ring"
			android:innerRadius="0dip"
			android:thicknessRatio="3.2" 
 			android:useLevel="false">  
    <!-- 
		    <stroke android:width="3px" android:color="@color/green_pressed" />  
 -->
		    <stroke android:width="3px" android:color="#FFFFFF" />  
		    <padding android:left="2px" android:top="2px"  
		            android:right="2px" android:bottom="2px" />  
		    <corners android:radius="2px" />  
		    <solid android:color="@color/green_pressed"/>
		</shape> 
    </item>  
</selector>
